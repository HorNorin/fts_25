<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "TEST APP", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if admin_signed_in? %>
          <li><%= link_to "Home",   admins_root_path %></li>
          <li><%= link_to "Users",   root_path %></li>
          <li><%= link_to "Subjects",   admins_subjects_path %></li>
          <li><%= link_to "Questions",   root_path %></li>
          <li><%= link_to "Examinations",   root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_admin.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Sign Out", destroy_admin_session_path %></li>
            </ul>
          </li>
        <% elsif user_signed_in? %>
          <li><%= link_to "Home",   root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.username %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", sign_out_path%>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Help", help_path %></li>
          <li><%= link_to "Sign In", sign_in_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
