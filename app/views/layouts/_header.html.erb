<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title.app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if admin_signed_in? %>
          <li><%= link_to t("link.home"), admins_root_path %></li>
          <li><%= link_to t("link.user"), admins_users_path %></li>
          <li><%= link_to t("link.subject"), admins_subjects_path %></li>
          <li><%= link_to t("link.question"), admins_questions_path %></li>
          <li><%= link_to t("link.examination"), admins_examinations_path %></li>
          <li><%= link_to t("link.help"), help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_admin.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("link.sign_out"), destroy_admin_session_path %></li>
            </ul>
          </li>
        <% elsif user_signed_in? %>
          <li><%= link_to t("link.home"), root_path %></li>
          <li><%= link_to t("link.help"), help_path %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.username %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("link.profile"), current_user %></li>
              <li><%= link_to t("link.setting"), edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("link.sign_out"), sign_out_path%>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("link.help"), help_path %></li>
          <li><%= link_to t("link.sign_in"), sign_in_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
